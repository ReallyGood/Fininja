{
  "manifest_version": 3,
  "version": "0.1",
  "name": "נינג'ה פיננסית",
  "description": "שדרוג פשוט למחשבון השכר של מלם. לא שולח מידע פרטי",
  "permissions": ["scripting"],
  "host_permissions": ["https://*.malam-payroll.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["https://*.malam-payroll.com/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/fininja-icon.png",
      "48": "images/fininja-48.png"
    }
  },
  "icons": {
    "16": "images/fininja-icon.png",
    "48": "images/fininja-48.png",
    "128": "images/fininja-128.png"
  }
}
